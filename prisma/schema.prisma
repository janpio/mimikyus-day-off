// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  auth0Sub     String        @unique
  password     String?
  name         String
  achievements Achievement[]
  Character    Character[]
  Move         Move[]
  Item         Item[]
}

model Achievement {
  id        Int       @id @default(autoincrement())
  date_get  DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  collected Boolean
}

model Move {
  id        Int       @id @default(autoincrement())
  date_get  DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  collected Boolean
}

model Item {
  id       Int       @id @default(autoincrement())
  user     User      @relation(fields: [userId], references: [id])
  userId   Int
  name     String
  quantity Int
}

model Character {
  id      Int     @id @default(autoincrement())
  user    User    @relation(fields: [userId], references: [id])
  userId  Int
  hp      Int
  attack  Int
  defense Int
  sp_atk  Int
  sp_def  Int
  speed   Int
  move_1  String
  move_2  String?
  move_3  String?
  move_4  String?
}
